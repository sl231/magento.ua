<?xml version="1.0"?>
<layout>
    <aincontact_index_index>
        <reference name='head'>
            <action method="removeItem"><type>skin_css</type><name>css/styles.css</name></action>
            <action method="addItem"><type>skin_css</type><name>css/styles.css</name></action>
            <action method="addCss"><stylesheet>css/ainstainer_styles.css</stylesheet></action>
        </reference>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
            <block type="page/html_footer" name="footer" as="footer" template="page/footer.phtml" /> <!-- Не совсем понятно для чего ты определил здесь этот блок -->
        </reference>
        <reference name="content">
            <block type="core/template" name="aincontact/view"
                   template="ainstainer/aincontact.phtml" />
        </reference>
    </aincontact_index_index>
</layout>
